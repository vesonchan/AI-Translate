{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "prism",
  "version": "0.9.13",
  "identifier": "com.qyzhg.prism",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "prism",
        "width": 450,
        "height": 630,
        "minWidth": 450,
        "minHeight": 630,
        "resizable": true,
        "center": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/qyzhg/prism/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUyNzQ5QTJDQzYyMEEzNzMKUldSem95REdMSnAwVXR1TzNNVHNlT2p6dHh4QzhJUHFwUm1GWHM0WGRFeGtRYVZZdHNTNThOSjQK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
